{
  "name": "@lukasbriza/ts-config",
  "version": "0.0.0",
  "description": "Typescript configuration for projects.",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./base.json",
    "./app": "./app.json",
    "./nextjs": "./nextjs.json",
    "./library": "./library.json"
  },
  "main": "base.json",
  "files": [
    "app.json",
    "base.json",
    "library.json",
    "nextjs.json"
  ],
  "scripts": {
    "cleanup": "rimraf .eslintcache .turbo node_modules",
    "fix": "run-p format:fix lint:fix",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix"
  },
  "devDependencies": {
    "typescript": "5.5.2"
  },
  "peerDependencies": {
    "typescript": "^5.5.2"
  }
}
